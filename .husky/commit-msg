# Conventional commit format validation
commit_regex='^(feat|fix|docs|style|refactor|test|chore)(\([a-z0-9-]+\))?: .{1,72}$'

if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message format!"
    echo ""
    echo "ğŸ“ Commit message must follow conventional commit format:"
    echo "   type(scope): description"
    echo ""
    echo "ğŸ“‹ Valid types: feat, fix, docs, style, refactor, test, chore"
    echo "ğŸ“ Description must be 1-72 characters"
    echo ""
    echo "âœ… Examples:"
    echo "   feat: add presentation upload functionality"
    echo "   fix(backend): correct database connection issue"
    echo "   docs: update setup instructions"
    echo ""
    exit 1
fi

echo "âœ… Commit message format is valid!"