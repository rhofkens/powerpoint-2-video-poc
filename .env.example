# PowerPoint to Video POC Environment Configuration
# Copy this file to .env and update the values

# ===== DATABASE CONFIGURATION =====
# PostgreSQL database password for ppt2video_db_user
PPT2VIDEOPOC_DB_PWD=your_secure_password_here

# ===== API CONFIGURATION =====
# Base URL for backend API (used by frontend)
VITE_API_URL=http://localhost:8080/api

# ===== EXTERNAL SERVICE API KEYS =====
# These will be needed in future increments

# OpenAI API key for GPT-4o-mini integration
# OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API key for text-to-speech generation
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# D-ID API key for avatar video generation
# DID_API_KEY=your_did_api_key_here

# ===== APPLICATION CONFIGURATION =====
# Spring Boot profile (dev, prod)
SPRING_PROFILES_ACTIVE=dev

# Maximum file upload size (in MB)
MAX_FILE_SIZE=50

# Storage directory for presentations and media files
STORAGE_PATH=./storage

# ===== DEVELOPMENT CONFIGURATION =====
# Enable/disable debug logging
DEBUG=false

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000