{
  "name": "powerpoint-2-video-poc",
  "version": "0.0.1",
  "description": "PowerPoint to Video Story POC - Monorepo",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && mvn spring-boot:run -Dspring-boot.run.profiles=dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && mvn clean package -DskipTests",
    "build:frontend": "cd frontend && npm run build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && mvn spotless:check",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && mvn spotless:apply",
    "format:frontend": "cd frontend && npm run lint --fix",
    "install:all": "npm install && cd frontend && npm install",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && mvn clean",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "prepare": "husky"
  },
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^9.1.0",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/powerpoint-2-video-poc.git"
  },
  "keywords": [
    "powerpoint",
    "video",
    "ai",
    "poc",
    "spring-boot",
    "react"
  ],
  "license": "MIT"
}
